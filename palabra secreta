palabras = ["python", "abogada", "justicia", "derecho", "codigo"]
palabra_secreta = (palabras)
intentos = 5
print("adivina la palabra")
print(f"tienes {intentos} intestos para adivinar la palabra")
    
while intentos > 0:
    adivinanza = input("ingresa tu palabra:").lower()
    if adivinanza == palabra_secreta:
        print("felicidades adivinaste la palabra")
        break
    else:
        intentos -= 1
        print(f"incorrecto te quedan{intentos} intentos")
    if intentos == 0:
        print(f"se acabaron los intestos la palabra era {palabra_secreta}")
